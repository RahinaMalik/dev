<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Restaurant Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Restaurant", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", new { Controller = "Home", area = "Common" })</li>*@
                    <li class="menu-item dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Manage <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Cuisine", "GetCuisineList", "Cuisine")</li>

                            @*<li>@Html.ActionLink("Add Cuisine", "AddCuisine", "Cuisine")</li>*@
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Add Order", "AddOrder", "Order")</li>
                    <li>@Html.ActionLink("Add Customer", "AddCustomer", "Customer")</li>
                    <li>@Html.ActionLink("Bills", "AddBills", "Bills")</li>
                    <li>@Html.ActionLink("Report", "Report", "Report")</li>
                    @*<li>@Html.ActionLink("Edit Cuisine", "Edit", new { Controller = "Cuisine", area = "User" })</li>*@



                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Restaurant Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>