@model IEnumerable<BOL_Business_Object_Layer_.Cuisine>

@{
    ViewBag.Title = "GetCuisineList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cuisine List</h2>

<p>
    @Html.ActionLink("Create New", "AddCuisine")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CuisineName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Restaurant.RestaurantName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CuisineName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Restaurant.RestaurantName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCuisine", "Cuisine", new { id=item.CuisineID },null) |
            @Html.ActionLink("Delete", "DeleteCuisine", "Cuisine", new { id=item.CuisineID },null)
        </td>
    </tr>
}

</table>
